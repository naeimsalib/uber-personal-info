worker_processes 1;
events { worker_connections 1024; }

http {
    include mime.types;
    default_type application/octet-stream;

    server {
        listen <%= ENV["PORT"] %> default_server;
        server_name _;

        root <%= ENV["HOME"] %>/public;
        index index.html;

        location / {
            try_files $uri /index.html;
        }
    }
}
